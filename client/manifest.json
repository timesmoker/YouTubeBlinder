{
	"name": "Youtube Blinder",
	"description": "Youtube Blinder",
	"version": "1.0",
	"manifest_version": 3,
	"options_ui": {
		"page": "options.html",
		"open_in_tab": true
	},
	"permissions": [
		"activeTab",
		"scripting",
		"storage",
		"tabs",
		"unlimitedStorage",
		"contextMenus",
		"declarativeNetRequest",
		"declarativeNetRequestFeedback"
	],
    "action": {
        "default_popup": "popup/popup.html",
        "default_title": "Youtube Blinder",
        "default_icon": "icon.png"
    },
	"background": {
		"service_worker": "background.js"
	},
    "web_accessible_resources": [{
		"resources": ["/injected-script.js", "injected-script-2.js"],
		"matches": ["*://*.youtube.com/*"]
    }],
    "content_scripts": [
		{
			"matches": ["*://*.youtube.com/*"],
			"js":  ["/contentScripts/content.js"],
			"run_at": "document_idle"
		}
	]
}
